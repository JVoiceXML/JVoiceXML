<?xml version="1.0" encoding="ISO-8859-1" ?>

<jvoicexml>
    <implementation>
        <platform>
            <class>org.jvoicexml.implementation.jvxml.platform.JVoiceXmlPlatform</class>
            <output>true</output>
            <input>true</input>
        </platform>
        <telephony>
        	<providers>
        		<provider name="AsteriskProvider"
        				  class="org.jvoicexml.implementation.telephony.provider.AsteriskProvider">
        			<terminals>
        				<terminal name="TestAGIScript"
        						  class="org.jvoicexml.implementation.telephony.terminal.AsteriskAGITerminal">
        					<port>4573</port>
        					<concurrentCalls>10</concurrentCalls>			  
        				</terminal>
        			</terminals>		  
        		</provider>
        	</providers>
        </telephony>
    </implementation>

    <documentserver>
        <scheme-strategies>
            <strategy>
                <scheme>http</scheme>
                <class>org.jvoicexml.documentserver.schemestrategy.HttpSchemeStrategy</class>
            </strategy>
            <strategy>
                <scheme>jvxmlmap</scheme>
                <class>org.jvoicexml.documentserver.schemestrategy.MappedDocumentStrategy</class>
            </strategy>
        </scheme-strategies>
    </documentserver>

    <interpreter>
        <grammar>
	        <grammarprocessor>
	            <grammaridentifier>
	                <class>org.jvoicexml.interpreter.grammar.SrgsXmlGrammarIdentifier</class>
	            </grammaridentifier>
	            <grammaridentifier>
	                <class>org.jvoicexml.interpreter.grammar.SrgsAbnfGrammarIdentifier</class>
	            </grammaridentifier>
	            <grammartransformer>
	                <class>org.jvoicexml.interpreter.grammar.SrgsXmlGrammarTransformer</class>
	            </grammartransformer>
	            <grammartransformer>
	                <class>org.jvoicexml.interpreter.grammar.SrgsAbnfGrammarTransformer</class>
	            </grammartransformer>
	        </grammarprocessor>
	    </grammar>
    </interpreter>

</jvoicexml>
