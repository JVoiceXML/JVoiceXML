<project name="JTAPI Demo - 3rd party libraries" basedir=".">
  <description>
This file contains the 3rd party library definitions used by this demo.
    </description>
  <property name="jvxml.core.dir" value="../org.jvoicexml" />
  <import file="${jvxml.core.dir}/3rdparty-libs.xml" />

  <target name="-local-3rdparty-setup" depends="-3rdparty-setup">
    <!-- local third party libraries -->
    <property name="local-3rdparty.dir" value="3rdparty" />
    <!-- JTAPI party libraries -->
    <property name="jtapi-3rdparty.dir"
        value="../org.jvoicexml.implementation.jtapi/3rdparty" />

    <!-- jtapi library -->
    <property name="jtapi.dir" value="${jtapi-3rdparty.dir}/jtapi1.3" />
    <property name="jtapi.lib.dir" value="${jtapi.dir}/lib" />

    <fileset dir="${jtapi.lib.dir}" id="jtapi.lib">
      <include name="**/*.jar" />
    </fileset>

    <!-- gjtapi library -->
    <property name="gjtapi.dir" value="${jtapi-3rdparty.dir}/gjtapi1.9" />
    <property name="gjtapi.lib.dir" value="${gjtapi.dir}/lib" />

    <fileset dir="${gjtapi.lib.dir}" id="gjtapi.lib">
      <include name="**/*.jar" />
    </fileset>

    <!-- mjsip library -->
    <property name="mjsip.dir" value="${jtapi-3rdparty.dir}/mjsip" />
    <property name="mjsip.lib.dir" value="${mjsip.dir}/lib" />

    <fileset dir="${mjsip.lib.dir}" id="mjsip.lib">
      <include name="**/*.jar" />
    </fileset>

    <!-- jvxml library -->
    <path id="jvxml.core.lib">
        <path location="${jvxml.core.dir}/dist/org.jvoicexml.client.jar" />
        <path location="${jvxml.core.dir}/dist/org.jvoicexml.xml.jar" />
    </path>
  </target>
</project>
