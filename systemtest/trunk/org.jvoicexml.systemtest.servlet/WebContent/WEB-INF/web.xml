<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">
	<display-name>JVoiceXML W3C Compatible Test</display-name>
	<description> This is a simple web application with a group xml code
		organization based on the recommendations of the Application
		Developer's Guide. </description>
	<servlet>
		<servlet-name>DefaultXsltTransformer</servlet-name>
		<servlet-class>org.jvoicexml.systemtest.servlet.DefaultXsltTransformer</servlet-class>
		<init-param>
			<param-name>txml</param-name>
			<param-value>/irtests/irtest.xslt</param-value>
		</init-param>
		<init-param>
			<param-name>ircgi</param-name>
			<param-value>/irtests/ircgi2jsp.xslt</param-value>
		</init-param>
		<init-param>
			<param-name>vxml</param-name>
			<param-value>/irtests/irtest.xslt</param-value>
		</init-param>
		<load-on-startup>100</load-on-startup>
	</servlet>
    <servlet>
        <servlet-name>GetLastTestDocument</servlet-name>
        <servlet-class>org.jvoicexml.systemtest.servlet.GetLastTestDocument</servlet-class>
        <init-param>
            <param-name>txml</param-name>
            <param-value>/irtests/irtest.xslt</param-value>
        </init-param>
        <init-param>
            <param-name>ircgi</param-name>
            <param-value>/irtests/ircgi2jsp.xslt</param-value>
        </init-param>
        <init-param>
            <param-name>vxml</param-name>
            <param-value>/irtests/irtest.xslt</param-value>
        </init-param>
        <load-on-startup>200</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetLastTestDocument</servlet-name>
        <url-pattern>/getLastTestDocument</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
		<servlet-name>DefaultXsltTransformer</servlet-name>
		<url-pattern>*.txml</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DefaultXsltTransformer</servlet-name>
		<url-pattern>*.ircgi</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DefaultXsltTransformer</servlet-name>
		<url-pattern>*.vxml</url-pattern>
	</servlet-mapping>
	<mime-mapping>
        <extension>vxml</extension>
        <mime-type>text/xml</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>txml</extension>
        <mime-type>text/xml</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>xslt</extension>
        <mime-type>text/xml</mime-type>
    </mime-mapping>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
	</welcome-file-list>
</web-app>