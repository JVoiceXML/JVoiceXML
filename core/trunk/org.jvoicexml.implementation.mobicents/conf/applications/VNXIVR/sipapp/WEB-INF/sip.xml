<sip-app>
	<app-name>VNXIVR</app-name>
	<display-name>VNXIVR</display-name>
	<description>Next Generation IVR Communications Framework.</description>
	<servlet-selection>
		<servlet-mapping>
			<servlet-name>SipCallManager</servlet-name>
			<pattern>
				<or>
					<equal>
						<var>request.method</var>
						<value>INVITE</value>
					</equal>
					<equal>
						<var>request.method</var>
						<value>OPTIONS</value>
					</equal>
				</or>
			</pattern>
		</servlet-mapping>
		<servlet-mapping>
			<servlet-name>PresenceManager</servlet-name>
			<pattern>
				<or>
					<equal>
						<var>request.method</var>
						<value>REGISTER</value>
					</equal>
				</or>
			</pattern>
		</servlet-mapping>
	</servlet-selection>

	<servlet>
		<servlet-name>SipCallManager</servlet-name>
		<display-name>SipCallManager</display-name>
		<description>The VNXIVR SIP Call Manager.</description>
		<servlet-class>
			org.mobicents.servlet.sip.restcomm.callmanager.mgcp.XIVRMgcpCallManager
		</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>SipGatewayManager</servlet-name>
		<display-name>SipGatewayManager</display-name>
		<description>The VNXIVR SIP Gateway Manager.</description>
		<servlet-class>
			org.mobicents.servlet.sip.restcomm.callmanager.gateway.SipGatewayManager
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>PresenceManager</servlet-name>
		<display-name>PresenceManager</display-name>
		<description>The VNXIVR SIP Presence Manager.</description>
		<servlet-class>
			org.mobicents.servlet.sip.restcomm.callmanager.presence.PresenceManager
		</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<listener>
		<listener-class>
			org.mobicents.servlet.sip.restcomm.TimerManager
		</listener-class>
	</listener>
	
	<listener>
		<listener-class>
			org.mobicents.servlet.sip.restcomm.callmanager.mgcp.XIVRMgcpCallManager
		</listener-class>
	</listener>

	<listener>
		<listener-class>
			org.mobicents.servlet.sip.restcomm.callmanager.gateway.SipGatewayManagerBootstrapper
		</listener-class>
	</listener>
</sip-app>
