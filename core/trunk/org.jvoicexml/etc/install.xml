<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<installation version="1.0">

  <!--
    The info section. The meaning of the tags should be natural ...
  -->
  <info>
    <appname>JVoiceXML</appname>
    <appversion>@{jvxml.version}</appversion>
    <authors>
      <author name="Dirk Schnelle-Walka" email="dirk.schnelle@jvoicexml.org" />
    </authors>
    <url>http://www.jvoicexml.org/</url>
    <javaversion>1.6</javaversion>
  </info>

  <!--
    The gui preferences indication. Sets the installer window to
    640x480. It will be possible to change the size.
  -->
  <guiprefs width="640" height="480" resizable="yes" />

  <!--
    The locale section. Asks here to include the English langpack.
  -->
  <locale>
    <langpack iso3="eng" />
  </locale>

  <!--
    Need to define ant properties we want to use during install as
    variables
  -->
  <variables>
    <variable name="jvxml.version" value="@{jvxml.version}" />
  </variables>

  <!--
    The resources section. The ids must be these ones if you want to use
    the LicencePanel and/or the InfoPanel.
  -->
  <resources>
    <res id="LicencePanel.licence" src="COPYING" />
    <res id="InfoPanel.info" src="README" />
  </resources>

  <!--
    The panels section. We indicate here which panels we want to use.
    The order will be respected.
  -->
  <panels>
    <panel classname="HelloPanel" />
    <panel classname="InfoPanel" />
    <panel classname="LicencePanel" />
    <panel classname="TargetPanel" />
    <panel classname="PacksPanel" />
    <panel classname="SummaryPanel" />
    <panel classname="InstallPanel" />
    <panel classname="FinishPanel" />
  </panels>

  <!--
    The packs section. We specify here our packs.
  -->
  <packs>
    <pack name="JVoiceXML Core" required="yes">
      <description>JVoiceXML binaries</description>
      <fileset dir="." targetdir="$INSTALL_PATH">
        <include name="bin/**" />
        <include name="doc/**" />
        <include name="COPYING" />
        <include name="README" />
        <exclude name="demo/**" />
        <exclude name="doc/api/**" />
      </fileset>
      <fileset dir="config" targetdir="$INSTALL_PATH/config">
        <include name="*.xsd" />
        <include name="jvxml*.xml" />
        <include name="jvoicexml.xml" />
        <include name="jvoicexml.policy" />
        <include name="jndi.properties" />
        <include name="log4j.xml" />
        <include name="logging.properties" />
        <include name="jmf.properties" />
      </fileset>
      <fileset dir="lib" targetdir="$INSTALL_PATH/lib">
        <include name="commons-*" />
        <include name="log4j-1.2.15.jar" />
        <include name="js.jar" />
        <include name="spring-core.jar" />
        <include name="spring-beans.jar" />
        <include name="jmf.jar" />
        <include name="jlibrtp.jar" />
        <include name="jvxml.jar" />
        <include name="jvxml-xml.jar" />
        <include name="jvxml-client.jar" />
        <include name="org.jvoicexml.jndi.jar" />
      </fileset>
    </pack>
    <pack name="JSAPI 1.0 implementation platform" required="no">
      <description>Base implementation platform based on JSAPI 1.0.

This package is required if you plan to use one of the demo
implementation platforms for JSAPI 1.0 or if you are having your
own JSAPI 1.0 compliant speech engine.
</description>
      <fileset dir="config" targetdir="$INSTALL_PATH/config">
        <include name="jsapi10-grammar.xml" />
      </fileset>
      <fileset dir="lib" targetdir="$INSTALL_PATH/lib">
        <include name="org.jvoicexml.implementation.jsapi10.jar" />
        <include name="org.jvoicexml.implementation.jsapi10.grammar.jar" />
        <include name="jsapi.jar" />
      </fileset>
    </pack>
    <pack name="JSAPI 1.0 demo implementation platform" required="no">
      <depends packname="JSAPI 1.0 implementation platform"/>
      <description>Demo implementation platform based on JSAPI 1.0.

Adds basic support for the JSAPI 1.0 implementation platform using
FreeTTS for speech synthesis and sphinx 4 for speech recognition.
</description>
      <fileset dir="config" targetdir="$INSTALL_PATH/config">
        <include name="jsapi10-implementation.xml" />
        <include name="jvoicexml.gram" />
        <include name="sphinx4.jsapi10.config.xml" />
      </fileset>
      <fileset dir="lib" targetdir="$INSTALL_PATH/lib">
        <include name="org.jvoicexml.implementation.jsapi10.jar" />
        <include name="org.jvoicexml.implementation.jsapi10.grammar.jar" />
        <include name="org.jvoicexml.implementation.jsapi10-impl.jar" />
        <include name="jsapi.jar" />
        <include name="jsapi-1.0-base.jar" />
        <include name="freetts-jsapi10.jar" />
        <include name="freetts.jar" />
        <include name="cmu_us_kal.jar" />
        <include name="cmulex.jar" />
        <include name="en_us.jar" />
        <include name="sphinx4.jar" />
        <include name="WSJ_8gau_13dCep_16k_40mel_130Hz_6800Hz.jar" />
      </fileset>
    </pack>
    <pack name="Talking Java Support for the JSAPI 1.0 implementation platform"
      required="no" os="windows">
      <depends packname="JSAPI 1.0 implementation platform"/>
      <description>Cloudgarden's implementation of JSAPI 1.0 allowing
to make use of SAPI4 and SAPI5 compliant TTS and ASR.

 * The TalkingJava SDK and runtime libraries are FREE FOR PERSONAL USE ONLY.
 * Any COMMERCIAL CORPORATE or INSTITUTIONAL use of the SDK or runtimes requires
   purchase of one or more professional licenses. Please see the website
   www.cloudgarden.com for current details.
 * None of the code used in the SDK or the implementation may be disassembled or
   reverse-engineered.
 * Neither the SDK nor the runtimes may be resold - the implementation may only
   be resold as part of a speech-enabled application if significant
   functionality is added, and sufficient Professional licenses are purchased
   from Cloudgarden.
 * Any distribution of the SDK or runtimes must include a copy of this license
   agreement, and the end-user should be made aware of it.
 * Purchase of a Professional License for Version 1.x of this SDK allows the
   license holder to download any future upgrades to the Version 1.x SDK
   (where 'x' stands for any minor version number)
 * THE AUTHOR DISCLAIMS ALL WARRANTIES WITH REGARD TO THIS SOFTWARE, INCLUDING
   ALL IMPLIED WARRANTIES OF MERCHANTABILITY AND FITNESS, AND IN NO EVENT SHALL
   HE BE LIABLE FOR ANY DAMAGES WHATSOEVER ARISING OUT OF OR IN CONNECTION WITH
   THE USE OR PERFORMANCE OF THIS SOFTWARE.
 * The SDK and implementation is the property of Cloudgarden,
   Copyright (c) 2001-2009, all rights reserved.
</description>
      <fileset dir="config" targetdir="$INSTALL_PATH/config">
        <include name="jsapi10-talking-java-implementation.xml" />
      </fileset>
      <fileset dir="lib" targetdir="$INSTALL_PATH/lib">
        <include name="org.jvoicexml.implementation.jsapi10.jar" />
        <include name="org.jvoicexml.implementation.jsapi10.grammar.jar" />
        <include name="cgjsapi.jar" />
        <include name="cgjsapi170.dll" />
        <include name="cgjsapi170_x64.dll" />
      </fileset>
    </pack>
    <pack name="JSAPI 2.0 implementation platform" required="no">
      <description>Demo implementation platform based on JSAPI 2.0.

This is an implementation of a draft 
specification developed under the Java Community 
Process (JCP) and is made available for testing and 
evaluation purposes only. The code is not compatible 
with any specification of the JCP.

Note that you still need to download jsapi2.jar from
http://www.conversations.com
and copy it to the JVoiceXML lib folder before running the interpreter.
      </description>
      <fileset dir="config" targetdir="$INSTALL_PATH/config">
        <include name="jsapi20-implementation.xml" />
        <include name="hello.xml" />
        <include name="sphinx4.config.xml" />
      </fileset>
      <fileset dir="lib" targetdir="$INSTALL_PATH/lib">
        <include name="jvxml-jsapi2.0.jar" />
        <include name="jsr-113.jar" />
        <include name="jsr113-jsebase.jar" />
        <include name="jsr113-jsebase-impl.jar" />
        <include name="freetts.jar" />
        <include name="cmu_us_kal.jar" />
        <include name="cmulex.jar" />
        <include name="en_us.jar" />
        <include name="sphinx4.jar" />
        <include name="WSJ_8gau_13dCep_16k_40mel_130Hz_6800Hz.jar" />
      </fileset>
    </pack>
    <pack name="JTAPI implementation platform" required="no">
      <description>Demo implementation platform based on JTAPI.

JTAPI is required to enable telephony support for JVoiceXML (Experimental).
      </description>
      <fileset dir="config" targetdir="$INSTALL_PATH/config">
        <include name="jtapi-implementation.xml" />
        <include name="jtapi-callmanager" />
        <include name="gjtapi-provider.properties" />
        <include name="ua1" />
      </fileset>
      <fileset dir="lib" targetdir="$INSTALL_PATH/lib">
        <include name="jvxml-jtapi.jar" />
        <include name="jtapi-1.3.1.jar" />
        <include name="gjtapi-1.9-rc2.jar" />
        <include name="gjtapi-mjsip-1.9-rc2.jar" />
        <include name="sip.jar" />
        <include name="ua.jar" />
      </fileset>
    </pack>
    <pack name="MRCPv2 implementation platform" required="no">
      <description>Demo implementation platform based for the MRCPv2 protocol (Non-functional).
      </description>
      <fileset dir="config" targetdir="$INSTALL_PATH/config">
        <include name="mrcpv2-implementation.xml" />
      </fileset>
      <fileset dir="lib" targetdir="$INSTALL_PATH/lib">
        <include name="jvxml-mrcpv2.jar" />
        <include name="cairo-sip-0.2.jar" />
        <include name="cairo-client-0.1.jar" />
        <include name="concurrent-1.3.4.jar" />
        <include name="jain-sip-api-1.2.jar" />
        <include name="jain-sip-ri-1.2.jar" />
        <include name="nist-sdp-1.0.jar" />
        <include name="mrcp4j-0.2.jar" />
      </fileset>
    </pack>
    <pack name="Text implementation platform" required="no">
      <description>Demo implementation platform for the console.
      </description>
      <fileset dir="config" targetdir="$INSTALL_PATH/config">
        <include name="text-implementation.xml" />
      </fileset>
      <fileset dir="lib" targetdir="$INSTALL_PATH/lib">
        <include name="jvxml-text.jar" />
        <include name="jvxml-client-text.jar" />
      </fileset>
    </pack>
    <pack name="API Documentation" required="no">
      <description>Javadoc API</description>
      <file src="doc/api" targetdir="$INSTALL_PATH/doc" />
    </pack>
    <pack name="Demo" required="no">
      <description>Demo programs.

The demo programs are designed to work with the JSAPI 1.0 implementation
platform. It is recommended to install that platform but not required.
The demo programs will also work with other platforms but may need a bit
tweaking.
      </description>
      <file src="demo" targetdir="$INSTALL_PATH" />
    </pack>
  </packs>
</installation>
